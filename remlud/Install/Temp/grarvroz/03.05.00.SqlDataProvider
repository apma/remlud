 BEGIN
CREATE TABLE {databaseOwner}{objectQualifier}Blog_MetaWeblogData (
	[TempInstallUrl] nvarchar(500) NULL
) ON [PRIMARY]
END

GO

INSERT INTO {databaseOwner}{objectQualifier}Blog_MetaWeblogData (TempInstallUrl) VALUES (NULL)

GO


